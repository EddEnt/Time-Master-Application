<!DOCTYPE html>
<html>

<head>
  <title>Time Records - Manager</title>
  <link rel="icon" href="/logo/icon.png">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<style>
  .navbar {
    margin-bottom: 5;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }


  .navbar-inverse .navbar-nav>li>a {
    color: #fff;
  }

  .navbar-brand img {
    margin-top: -15px;
    height: 50px;
  }

  .btn-back {
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .navbar-inverse .navbar-nav>li>a:hover,
  .navbar-inverse .navbar-nav>li>a:focus {
    color: red;
  }

  /* Header */

  .container h1 {
    margin-top: 50px;
    margin-bottom: 50px;
    text-align: center;
    font-size: 36px;
    color: #080808;
  }

  /* Table */
  table {
    width: 100%;
    border-collapse: collapse;
  }

  th,
  td {
    padding: 10px;
    text-align: center;
    border: 1px solid #ddd;
  }

  th {
    background-color: #080808;
    color: #fff;
  }

  tbody tr:hover {
    background-color: #f5f5f5;
  }

  /* Footer */
  .container a.btn-default {
    margin-top: 50px;
    margin-bottom: 50px;
    background-color: #080808;
    border-color: #080808;
    color: #fff;
  }

  .container a.btn-default:hover,
  .container a.btn-default:focus {
    background-color: #000;
    border-color: #000;
    color: #fff;
  }

  .clock-in {
    color: green;
    font-weight: bold;
  }

  .clock-out {
    color: red;
    font-weight: bold;
  }

  footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px; /* Set the height of your footer */
    background-color: #222; 
    text-align: center;
    color:#fff
    }
</style>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <img src="/logo/logo2.png" alt="logo" style="height: 50px; margin-top: -15px;">
        </a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="https://time-master.herokuapp.com/api/manager/manager-panel">Dashboard</a></li>
        <li><a href="https://time-master.herokuapp.com/api/manager/employee-management">Employee Management</a></li>
        <li><a href="https://time-master.herokuapp.com/api/manager/schedule-upload">Schedule</a></li>
        <li class="active"><a href="https://time-master.herokuapp.com/api/manager/time-records">Time Records</a></li>
        <li><a href="https://time-master.herokuapp.com/api/manager/time-off-requests">Time Requests</a></li>
        <li><a href="https://time-master.herokuapp.com/api/manager/announcement">Announcement Management</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="https://time-master.herokuapp.com/"><span class="glyphicon glyphicon-home"></span>Back to Home</a>
        </li>
        <li><a href="https://time-master.herokuapp.com/api/manager/logout"><span
              class="glyphicon glyphicon-log-out"></span>Logout</a></li>

      </ul>
    </div>
  </nav>

  <!-- Header -->
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-5">
        <h2 class="heading">Time Records</h2>
      </div>
    </div>

    <hr>

    <!-- List of Time Records -->
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>Employee</th>
            <th>Date</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody>
          <% timeRecords.forEach((timeRecord, index)=> { %>
            <tr>
              <td>
                <%= employees[index].firstName %>
                  <%= employees[index].lastName %>
              </td>
              <td>
                <!-- <%= timeRecord.date %> -->
                <%= (new Date(timeRecord.date)).toLocaleString("en-US", {timeZone: "America/New_York"}) %>
              </td>
              <td>
                <!-- help me write a code which will chnage the backgroud color for the whole block -->
                <% if(timeRecord.type=="clock-in" ) { %>
                  <span class="clock-in">
                    <%= timeRecord.type %>
                  </span>
                  <% } else { %>
                    <span class="clock-out">
                      <%= timeRecord.type %>
                    </span>
                    <% } %>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer -->
  <!-- <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <a href="/" class="btn btn-default">Back to Home</a>
    </div>
  </div> -->
  </div>

  <%- include('footer') %>

</body>

</html>