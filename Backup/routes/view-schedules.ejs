<!DOCTYPE html>
<html>
<head>
	<title>View Schedule</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<style>
	/* Style the table */
	table {
		width: 100%;
		border-collapse: collapse;
		margin-bottom: 20px;
	}
	
	th, td {
		text-align: left;
		padding: 8px;
		border: 1px solid #ddd;
	}

	th {
		background-color: #f2f2f2;
	}

	/* Style the download button */
	.btn-download {
		background-color: #4CAF50;
		color: white;
		border-radius: 4px;
		border: none;
		cursor: pointer;
		padding: 10px 16px;
		text-align: center;
		text-decoration: none;
		display: inline-block;
		font-size: 16px;
		margin: 4px 2px;
		transition-duration: 0.4s;
		margin-right: 20px;
	}

	.btn-download:hover {
		background-color: #3e8e41;
		color: white;
	}
	
	/* Style the back button */
	.btn-back {
		background-color: #555;
		color: white;
		border-radius: 4px;
		border: none;
		cursor: pointer;
		padding: 10px 16px;
		text-align: center;
		text-decoration: none;
		display: inline-block;
		font-size: 16px;
		margin: 4px 2px;
		transition-duration: 0.4s;
	}

	.btn-back:hover {
		background-color: #333;
		color: white;
	}

	.navbar-inverse .navbar-nav>li>a:hover, 
	.navbar-inverse .navbar-nav>li>a:focus {
  		color: red;
}

</style>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">
              <img src="/public/logo/logo2.png" alt="logo" style="height: 50px; margin-top: -15px;">
            </a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="http://localhost:3030/api/emp/employee-panel">Dashboard</a></li>
            <li><a href="http://localhost:3030/api/emp/clock">Clock</a></li>
            <li><a href="http://localhost:3030/api/emp/hours-worked">Time Records</a></li>
            <li><a href="http://localhost:3030/api/emp/time-off-requests">Time Requests</a></li>
            <li class="active"><a href="http://localhost:3030/api/emp/view-schedules">View Schedule</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="http://localhost:3030/api/emp/profile"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
            <li><a href="http://localhost:3030/api/emp/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
          </ul>
        </div>
      </nav>
    

	<!-- Header -->
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1 class="text-center">View Schedule</h1>
			</div>
		</div>

		<hr>

		<!-- Schedule Table -->
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<table class="table">
					<thead>
						<tr>
							<th>Title</th>
							<th>Date Uploaded</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						<% schedules.forEach(function(schedule) { %>
						<tr>
							<td><%= schedule.name %></td>
							<td><%= schedule.uploadedAt %></td>
							<td><a href="/api/emp/schedule/<%= schedule._id %>">Download</a></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>

		<!-- Footer -->
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<a href="/" class="btn btn-default">Back to Home</a>
			</div>
		</div>
	</div>

</body>
</html>
